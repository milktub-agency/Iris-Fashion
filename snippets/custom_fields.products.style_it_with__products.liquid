{% if product.metafields["custom_fields"]["style_it_with__products"] != blank %}
  <div class="custom-field custom-field__style-it-with__products custom-field__type--product-reference">
    <h3 class="custom-field--title">Style it with - Products</h3>
    <div class="custom-field--value">  
    {% assign product_refs = product.metafields["custom_fields"]["style_it_with__products"] | split: "|" %}
      <ul>
        {% for product_handle in product_refs %}
          <li>
            {% assign product_ref = all_products[product_handle] %}
            {{ product_ref.title | link_to: product_ref.url }}
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
{% endif %}